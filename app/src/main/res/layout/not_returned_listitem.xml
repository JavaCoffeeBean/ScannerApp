<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:background="@drawable/recyclerview_shape"
    android:id="@+id/parent_layout1"
    android:layout_marginBottom="30dp"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/darkGrey"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="109dp"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/example_book_cover" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/book_title"
        android:layout_toRightOf="@id/recipe_image"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"/>


    <Button
        android:id="@+id/delete_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:background="@drawable/recyclerview_shape"
        android:backgroundTint="@color/red"/>


    <Button
        android:id="@+id/add_to_returned_button"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:text="Add to Returned"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_above="@id/delete_button"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:background="@drawable/recyclerview_shape"
        android:backgroundTint="@color/green"/>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:id="@+id/filer_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/favorite_button"/>

</RelativeLayout>